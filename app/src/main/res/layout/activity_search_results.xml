<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:text="Search Results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_dark"
            android:textSize="@dimen/activity_textbar_textsize"
            android:id="@+id/textView_searchResTitle"></TextView>
        <TextView
            android:text="Marshallese to English"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"></TextView>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/listView_searchResM2E"
            android:layout_weight="1" />
        <TextView
            android:text="English to Marshallese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"></TextView>
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/listView_searchResE2M"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>